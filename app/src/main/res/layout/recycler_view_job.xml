<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/round_icon"
                    android:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:clickable="false"
                    android:textSize="20sp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    app:cornerRadius="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/text_view_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:textFontWeight="700"
                            android:includeFontPadding="true"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/text_view_favorite"
                        android:contentDescription="Favorito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_favorite"
                        app:tint="@color/black"
                        android:layout_alignParentEnd="true"
                         />
                    </RelativeLayout>

        <TextView
            android:id="@+id/text_view_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/nunito_sans"
            android:textFontWeight="400"
            android:textSize="14sp"
            android:textColor="?android:textColorPrimary"
            android:textStyle="normal" />


            <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans_light_italic"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:drawableStart="@drawable/ic_location"
                    android:id="@+id/text_view_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nunito_sans_light_italic"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_view_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nunito_sans_light_italic"
                    android:textSize="11sp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/blue"
                    android:textStyle="normal" />



            </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>